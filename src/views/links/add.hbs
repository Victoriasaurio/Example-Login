    <div class="row">
        <div class="col-md-4 mx-auto"> {{!--mx-auto: Centra la tarjeta--}}
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Title" autofocus> 
                            {{!-- autofocus: Posiciona el cursor en la tarjeta --}}
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" class="form-control" placeholder="Url"> {{!--Nombra la tajeta--}}
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description"></textarea> {{!--row=2 ocupa 2 l√≠neas--}}
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block"> {{!-- btn-block: ocupa todo el ancho del espacio --}}
                                Save 
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>